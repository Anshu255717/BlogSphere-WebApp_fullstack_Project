    }

    .popup-menu a:hover {
        background-color: #f0f0f0;
    }

    .auth-buttons {
        margin-top: 10px;
        flex-direction: column;
        gap: 10px;
        margin-right:60px;
    }

    .hero {
        display: flex;
        align-items: center;
        justify-content: center;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding: 20px;
        height: 500px;
        margin: 0;
        overflow: hidden;
        position: relative;
    }

    .hero-image {
        width: 100%;
        height: auto;
        max-height: 60vh;
        object-fit: cover;
        position: absolute;
        bottom: 10px;
        left: 0;
        right: 0;
    }

    .hero-content {
        position: relative;
        text-align: center;
        max-width: 100%;
        z-index: 1;
        padding: 20px;
    }

    .hero-content h1 {
        font-size: 2.5em;
        margin-top: 60px;
        margin-bottom: 20px;
    }

    .domain-search {
        margin: 20px 0;
        padding: 15px;
    }

    .get-started-btn {
        display: none;
    }

    .templates-content,
    .features-content,
    .testimonials-content {
        flex-direction: column;
    }

    .templates-content .text,
    .features-content .text,
    .testimonials-content .text,
    .templates-content .template-slider,
    .features-content .feature-slider,
    .testimonials-content .testimonial-slider {
        max-width: 100%;
    }

    .templates-content .template-slider,
    .features-content .feature-slider,
    .testimonials-content .testimonial-slider {
        margin-top: 20px;
    }

    .auth-buttons
     {
       display:none;
    }

    footer {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .footer-content {
        flex-direction: column;
        gap: 30px;
    }
}

@media (max-width: 480px) {
    .main-nav ul li {
        font-size: 0.875rem; 
    }
    .hero {
        padding: 10px;
        height: 300px;
    }

    .hero-image {
        max-height: 350px;
