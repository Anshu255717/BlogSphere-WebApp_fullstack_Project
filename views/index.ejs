        flex-direction: row;
        align-items: center;
        padding: 10px;
        position: relative;
    }

    .main-nav ul {
        display: none;
        position: absolute;
        top: 50px; 
        right: 0;
        background-color: white;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .main-nav ul.show {
        display: flex; 
        flex-direction: column;
        align-items: center;
    }

    .main-nav ul li {
        margin: 10px 0;
        font-size: 1rem;
    }

    .menu-icon {
        display: block;
        cursor: pointer;
        font-size: 1.5rem;
        color: #333;
    }

    .popup-menu {
        display: none;
        position: fixed;
        top: 0;
        right: 0;
        width: 250px;
