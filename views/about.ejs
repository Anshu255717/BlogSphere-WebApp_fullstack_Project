  <script>
    const menuIcon = document.querySelector('.menu-icon');
    const popupMenu = document.querySelector('.popup-menu');

    menuIcon.addEventListener('click', () => {
      popupMenu.classList.toggle('open');
    });
    document.addEventListener('DOMContentLoaded', () => {
  const phrases = [
    "Your go-to platform for creating and sharing your passions...",
    "Discover new and exciting content every day!",
    "Join our community of passionate bloggers and readers.",
    "Explore a world of ideas and inspiration with us!"
  ];

  const typingElement = document.querySelector('.background-image p');
  let currentPhraseIndex = 0;

  function typeEffect(text, i, fnCallback) {
    if (i < text.length) {
      typingElement.innerHTML = text.substring(0, i + 1) + '<span aria-hidden="true"></span>';
      setTimeout(() => typeEffect(text, i + 1, fnCallback), 50);
    } else if (typeof fnCallback == 'function') {
      setTimeout(fnCallback, 1000);
    }
  }

  function deleteEffect(text, i, fnCallback) {
    if (i >= 0) {
      typingElement.innerHTML = text.substring(0, i) + '<span aria-hidden="true"></span>';
      setTimeout(() => deleteEffect(text, i - 1, fnCallback), 50);
    } else if (typeof fnCallback == 'function') {
      setTimeout(fnCallback, 1000);
    }
  }

  function startTyping() {
    typeEffect(phrases[currentPhraseIndex], 0, () => {
      setTimeout(() => {
        deleteEffect(phrases[currentPhraseIndex], phrases[currentPhraseIndex].length, () => {
          currentPhraseIndex = (currentPhraseIndex + 1) % phrases.length;
          startTyping();
        });
      }, 2000);
    });
  }

  startTyping();
});
  </script>
